<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" style="@style/LineLinearLayout"
    android:orientation="horizontal" android:gravity="center" android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground" android:clickable="true" android:focusable="true">

    <TextView
        android:maxLines="2"
        style="@style/BaseText"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:id="@+id/leftSideLine"/>

    <TextView
        android:maxLines="1"
        android:gravity="end"
        style="@style/BaseText"
        android:id="@+id/rightSideLine"
        android:layout_width="wrap_content"/>

</LinearLayout>